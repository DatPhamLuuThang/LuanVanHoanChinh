@model List<int>

@{
    ViewBag.Title = "Danh Sách Tháng trong Học Kỳ";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}
<section class="scroll-section" id="basic">
    <h2 class="small-title">Kết quả học tập</h2>
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="card mb-5">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <ul class="list-group sortable" id="sortableBasic">
                            @foreach (var month in Model)
                            {
                                <li class="list-group-item">
                                    <!-- Thay đổi link để chuyển đến MonthTranscripts và truyền giá trị tháng -->
                                         <!-- ai dạy goọi href :)) -->
                                    <a href="@Url.Action("MonthTranscripts", new { classroomId = ViewBag.ClassroomId, selectedMonth = month })">Tháng @month</a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>Hiện không có tháng nào trong học kỳ.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
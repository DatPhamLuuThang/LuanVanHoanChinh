@using Utilities
@model CoreEntities.SchoolMgntModel.Student

@{
    ViewBag.Title = "Trang cá nhân";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}

<div class="row">
    <div class="col-12 col-xl-4 col-xxl-3">
        <h2 class="small-title">Thông tin cá nhân</h2>
        <div class="card mb-5">
            <div class="card-body">
                <div class="d-flex align-items-center flex-column mb-4">
                    <div class="d-flex align-items-center flex-column">

                        <div class="h5 mb-0">@Model?.FirstName @Model?.LastName</div>
                            @if (Model != null)
                            {
                                <div class="text-muted">@Model.BirthDay.ToString(Helper.FormatDateTime.OnlyDate)</div>
                                <div class="text-muted">
                                    <i data-acorn-icon="gender" class="me-1"></i>
                                    <span class="align-middle">
                                        Giới tính:
                                        @if (Model.Gender)
                                        {
                                            <span>Nam</span>
                                        }
                                        else
                                        {
                                            <span>Nữ</span>
                                        }
                                    </span>
                                </div>
                                                                                                                
                                                                                                                
                            }
                            else
                            {
                                <p>Không có ngày sinh học sinh.</p>
                            }
                    </div>
                </div>
                <div class="nav flex-column" role="tablist">
                    <a class="nav-link active px-0 border-bottom border-separator-light" data-bs-toggle="tab" role="tab">
                        <i data-acorn-icon="phone" class="me-2" data-acorn-size="17"></i>
                        <span class="align-middle">Số điện thoại: @Model?.PhoneNumber</span>
                    </a>
                    <a class="nav-link px-0 border-bottom border-separator-light" data-bs-toggle="tab" role="tab">
                        <i data-acorn-icon="email" class="me-2" data-acorn-size="17"></i>
                        <span class="align-middle">Email: @Model?.Email</span>
                    </a>
                    <a class="nav-link px-0" data-bs-toggle="tab" role="tab">
                        <i data-acorn-icon="home" class="me-2" data-acorn-size="17"></i>
                        <span class="align-middle">Địa chỉ: @Model?.Address</span>
                    </a>
                    <a class="nav-link px-0" data-bs-toggle="tab" role="tab">
                        <i data-acorn-icon="home" class="me-2" data-acorn-size="17"></i>
                        <span class="align-middle">Lớp: @Model?.ClassRoom?.ClassName</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>
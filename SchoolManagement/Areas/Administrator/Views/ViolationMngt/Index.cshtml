
@model IEnumerable<CoreEntities.SchoolMgntModel.Violation>

<div class="card">
    <div class="card-body">
        <div class="m-t-25">
            <p>
                @await Html.PartialAsync(Helper.StaticUrl.ButtonChild.ButtonCreate, Model, null)
            </p>

            <table id="data-table" class="table">
                <thead>
                <tr>
                    <th>Ngày vi phạm</th>
                    <th>Lỗi vi phạm</th>
                    <th>Số vi phạm</th>
                    <th>Học sinh vi phạm</th>

         
                    <th class="text-center col-2">
                        <i class="anticon anticon-tool"></i>Tools
                    </th>
                </tr>
                </thead>

                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.DayOfViolate.Value.ToString(Helper.FormatDateTime.OnlyDate)</th>
                        <td>@item.Violate</td>
                        <th>@item.NumberOfViolate</th>
                        <th>@item.Student.FirstName @item.Student.LastName</th>
              
                
                        @await Html.PartialAsync(Helper.StaticUrl.Button, item, null)
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>
</div>
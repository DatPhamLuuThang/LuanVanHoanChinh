@model IEnumerable<CoreEntities.SchoolMgntModel.News>


<div class="card">
    <div class="card-body">
        <div class="m-t-25">
            <p>
                @await Html.PartialAsync(Helper.StaticUrl.ButtonChild.ButtonCreate, Model, null)
            </p>

            <table id="data-table" class="table">
                <thead>
                <tr>
                    <th>Tin tức</th>
                    <th>Thông báo</th>
                    <th>Hình ảnh</th>
                    <th class="text-center col-2">
                        <i class="anticon anticon-tool"></i>Tools
                    </th>
                </tr>
                </thead>

                <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(!item.IsActive ? "table-danger" : "")">
                        <td>@item.NewsSchool</td>
                        <td>@item.Noty</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImgSchoolFileName))
                            {
                                <img width="80px" height="auto" src="~/uploads/@item.ImgSchoolFileName" alt="Hình ảnh">
                            }
                        </td>
                        @await Html.PartialAsync(Helper.StaticUrl.Button, item, null)


                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

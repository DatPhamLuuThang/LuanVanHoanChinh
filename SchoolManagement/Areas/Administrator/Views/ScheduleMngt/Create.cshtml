@model CoreEntities.SchoolMgntModel.Schedule

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input asp-for="Id" hidden>
<input asp-for="IsActive" hidden/>
<input asp-for="CreatedBy" hidden/>
<input asp-for="CreatedAt" hidden/>
<input asp-for="UpdatedBy" hidden/>
<input asp-for="UpdatedAt" hidden/>


<div class="form-group">
    <label asp-for="Day" class="control-label"></label>
    <input asp-for="Day" class="form-control"/>
    <span asp-validation-for="Day" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ScheduleTimeId" class="control-label"></label>
    <select asp-for="ScheduleTimeId" class="form-control" asp-items="ViewBag.ScheduleTimeId">
        <option value="@Guid.Empty" selected>NULL</option>
    </select>
</div>

<div class="form-group">
    <label asp-for="SubjectId" class="control-label"></label>
    <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId">
        <option value="@Guid.Empty" selected>NULL</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="SemesterId" class="control-label"></label>
    <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.SemesterId">
        <option value="@Guid.Empty" selected>NULL</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="ClassRoomId" class="control-label"></label>
    <select asp-for="ClassRoomId" class="form-control" asp-items="ViewBag.ClassRoomId">
        <option value="@Guid.Empty" selected>NULL</option>
    </select>
</div>
@model IEnumerable<CoreEntities.SchoolMgntModel.Schedule>

<div class="card">
    <div class="card-body">
        <div class="m-t-25">
            <p>
                @await Html.PartialAsync(Helper.StaticUrl.ButtonChild.ButtonCreate, Model, null)
            </p>

            <table id="data-table" class="table">
                <thead>
                <tr>
                    <th>Ngày dạy</th>
                    <th>Tiết học</th>
                    <th>Thời gian</th>
                    <th>Môn học</th>
                    <th>Lớp</th>
                    <th>Học kì</th>
         
                    <th class="text-center col-2">
                        <i class="anticon anticon-tool"></i>Tools
                    </th>
                </tr>
                </thead>

                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Day.ToString(Helper.FormatDateTime.OnlyDate)</th>
                        <th>@item.ScheduleTime!.LessonName</th>
                        <th>@item.ScheduleTime!.StartTime - @item.ScheduleTime!.EndTime</th>
                        <td>@item.Subject!.NameSubject</td>
                        <th>@item.ClassRoom!.ClassName</th>
                        <th>@item.Semester!.NameSemester</th>
                        @await Html.PartialAsync(Helper.StaticUrl.Button, item, null)
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>
</div>
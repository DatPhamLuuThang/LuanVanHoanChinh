@using Utilities
@model string

@{
    ViewData["Titles"] = "Xác nhận xóa";
}

<form asp-area=@ViewContext.RouteData.Values["area"]
      asp-controller=@ViewContext.RouteData.Values["controller"]
      asp-action="SoftDelete"
      asp-route-id="@Model">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ViewData["Titles"]</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <i class="anticon anticon-close"></i>
                </button>
            </div>
            <div class="modal-body">
                Bạn có chắn chắn muốn xóa?
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-tone btn-danger">
                    <i class="@Helper.FormatButton.Delete.Icon"></i> @Helper.FormatButton.Delete.Title
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="@Helper.FormatButton.Cancel.Icon"></i> @Helper.FormatButton.Cancel.Title
                </button>
            </div>
        </div>
    </div>
</form>